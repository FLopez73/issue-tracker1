<%= form_with(model: @issue, local: true, class: "max-w-xl mx-auto py-10 px-5") do |f| %>
    <h2 class="text-2xl font-semibold mb-6">New Issue</h2>
    
    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="mb-6">
      <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :description, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="mb-4">
      <%= f.label :priority, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.select :priority, options_for_select(['High', 'Medium', 'Low']), {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="mb-4">
      <%= f.label :assignee, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :assignee, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="mb-6">
      <%= f.label :status, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.select :status, options_for_select(['Open', 'In Progress', 'Closed']), {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  
    <div class="flex items-center justify-between">
      <%= f.submit "Create Issue", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

