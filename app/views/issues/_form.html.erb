<%= form_with(model: @issue, local: true, class: "max-w-4xl mx-auto py-10 px-6 bg-white rounded-lg shadow-xl") do |f| %>
  <h2 class="text-3xl font-semibold mb-6 text-gray-800">New Issue</h2>
  
  <div class="mb-6">
    <%= f.label :title, class: "block text-lg font-medium text-gray-800 mb-2" %>
    <%= f.text_field :title, class: "form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="mb-6">
    <%= f.label :description, class: "block text-lg font-medium text-gray-800 mb-2" %>
    <%= f.text_area :description, rows: 5, class: "form-textarea mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="mb-6">
    <%= f.label :priority, class: "block text-lg font-medium text-gray-800 mb-2" %>
    <%= f.select :priority, options_for_select(['High', 'Medium', 'Low']), {}, class: "form-select mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="mb-6">
    <%= f.label :assignee, class: "block text-lg font-medium text-gray-800 mb-2" %>
    <%= f.text_field :assignee, class: "form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="mb-6">
    <%= f.label :status, class: "block text-lg font-medium text-gray-800 mb-2" %>
    <%= f.select :status, options_for_select(['Open', 'In Progress', 'Closed']), {}, class: "form-select mt-1 block w-full border border-gray-300 rounded-md shadow-sm text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  
  <div class="flex items-center justify-between">
    <%= f.submit "Create Issue", class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>


