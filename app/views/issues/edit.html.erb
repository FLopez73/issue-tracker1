<div class="min-h-screen bg-gray-900 flex items-center justify-center px-6">
  <div class="w-full max-w-2xl bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-2xl text-gray-800">Edit Issue</h1>
      <%= link_to "Never Mind", issues_path, class: "inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded" %>
    </div>
    <div id="<%= dom_id @issue %>" class="mt-6">
      <%= render "form", issue: @issue %>
    </div>
  </div>
</div>